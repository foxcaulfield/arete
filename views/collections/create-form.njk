{% extends "layouts/base.njk" %}

{% block content %}
	{# Page Header with Back Button #}
	<div class="page-header page-header--simple">
		<a href="/ui/collections" class="btn-back">‚Üê Collections</a>
	</div>

	<div class="card form-card">
		<div class="form-header">
			<h1 class="form-header__title">Create New Collection</h1>
			<p class="form-header__subtitle">Organize your exercises into a collection</p>
		</div>

		<form 
			id="create-collection-form" 
			hx-post="/collections/create"
			hx-encoding="json"
			hx-trigger="submit"
			hx-swap="none"
			hx-disabled-elt="button[type='submit']"
			hx-on::after-request="
				if(event.detail.successful){ 
					const body = JSON.parse(event.detail.xhr.responseText);
					toast.success('Collection created!');
					setTimeout(function(){ window.location='/ui/collections/' + body.id; }, 500);
				} else {
					try { 
						const err = JSON.parse(event.detail.xhr.responseText);
						const fields = err.fields ? Object.values(err.fields).flat().join(', ') : '';
						toast.error(err.message + (fields ? ': ' + fields : ''));
					} catch(e){
						toast.error('Failed to create collection');
					}
				}"
			class="form-body"
		>
			<div class="form-group">
				<label for="collection-name-input" class="form-label">Collection Name <span class="required">*</span></label>
				<input 
					type="text" 
					id="collection-name-input" 
					name="name" 
					class="form-input"
					placeholder="e.g., Spanish Vocabulary, Math Formulas..."
					required
					minlength="3"
					autocomplete="off"
				/>
				<span class="form-hint">Minimum 3 characters</span>
			</div>

			<div class="form-group">
				<label for="collection-description-input" class="form-label">Description</label>
				<textarea 
					id="collection-description-input" 
					name="description" 
					class="form-input"
					rows="3"
					placeholder="What is this collection about?"
				></textarea>
				<span class="form-hint">Optional - helps you remember the purpose of this collection</span>
			</div>

			<div class="form-actions">
				<a href="/ui/collections" class="btn-outline">Cancel</a>
				<button type="submit" class="btn-primary">Create Collection</button>
			</div>
		</form>
	</div>
{% endblock %}